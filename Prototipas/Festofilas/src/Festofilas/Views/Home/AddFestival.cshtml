@using Festofilas.Data.Model;
@model Festofilas.Models.MainViewModels.FestivalViewModel

@{
    ViewData["Title"] = "Pridėti festivalį";
}

<h2>Pridėti festivalį</h2>

<form asp-action="AddFestival" class="form-group" method="post" enctype="multipart/form-data">
    <div class="form-horizontal">
        <hr/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label">Festivalio pavadinimas</label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Date" class="col-md-2 control-label">Data(YYYY.mm.dd)</label>
            <div class="col-md-10">
                <input asp-for="Date" class="form-control"/>
                <span asp-validation-for="Date" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Genre" class="col-md-2 control-label">Žanras</label>
            <div class="col-md-10">
                <select asp-for="Genre" asp-items="Html.GetEnumSelectList<GenreEnum>()"  class="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LowestPrice" class="col-md-2 control-label">Mažiausia kaina</label>
            <div class="col-md-10">
                <input asp-for="LowestPrice" class="form-control" min="0"/>
                <span asp-validation-for="LowestPrice" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="HighestPrice" class="col-md-2 control-label" min="0">Didžiausia kaina</label>
            <div class="col-md-10">
                <input asp-for="HighestPrice" class="form-control"/>
                <span asp-validation-for="HighestPrice" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Webpage" class="col-md-2 control-label">Svetainė</label>
            <div class="col-md-10">
                <input asp-for="Webpage" class="form-control"/>
                <span asp-validation-for="Webpage" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PlainTextAddress" class="col-md-2 control-label">Adresas</label>
            <div class="col-md-10">
                <input asp-for="PlainTextAddress" class="form-control"/>
                <span asp-validation-for="PlainTextAddress" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Longitude" class="col-md-2 control-label">Ilguma</label>
            <div class="col-md-10">
                <input asp-for="Longitude" class="form-control"/>
                <span asp-validation-for="Longitude" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Latitude" class="col-md-2 control-label">Platuma</label>
            <div class="col-md-10">
                <input asp-for="Latitude" class="form-control"/>
                <span asp-validation-for="Latitude" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TicketWebsite" class="col-md-2 control-label">Biletų svetainė</label>
            <div class="col-md-10">
                <input asp-for="TicketWebsite" class="form-control"/>
                <span asp-validation-for="TicketWebsite" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Summary" class="col-md-2 control-label">Trumpas aprašymas</label>
            <div class="col-md-10">
                <textarea asp-for="Summary" class="form-control"></textarea>
                <span asp-validation-for="Summary" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="col-md-2 control-label">Organizatoriu tel.numeris</label>
            <div class="col-md-10">
                <input asp-for="PhoneNumber" class="form-control"/>
                <span asp-validation-for="PhoneNumber" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="col-md-2 control-label">Organizatoriu el.paštas</label>
            <div class="col-md-10">
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FirstName" class="col-md-2 control-label">Organizatoriaus vardas</label>
            <div class="col-md-10">
                <input asp-for="FirstName" class="form-control"/>
                <span asp-validation-for="FirstName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="col-md-2 control-label">Organizatoriaus pavardė</label>
            <div class="col-md-10">
                <input asp-for="LastName" class="form-control"/>
                <span asp-validation-for="LastName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Facebook" class="col-md-2 control-label">Festivalio facebook puslapis</label>
            <div class="col-md-10">
                <input asp-for="Facebook" class="form-control"/>
                <span asp-validation-for="Facebook" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Image" class="col-md-2 control-label">Paveikslėlis</label>
            <div class="col-md-10">
                <input type="file" name="Image"/>
            </div>

        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sukurti" class="btn btn-default"/>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
