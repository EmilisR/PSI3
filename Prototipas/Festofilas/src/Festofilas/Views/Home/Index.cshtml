@model List<Festofilas.Models.MainViewModels.ArticleThumbModel>
@{
    ViewData["Title"] = "Naujienos";
}
<br />
<div class="container">
    <div class="row">
        <div class="col-md-10">
            <h1>Naujienos</h1>
            @foreach (var festival in Model)
            {
                <div class="row">
                    <div class="col-md-6">
                        <img src="@festival.Image64" class="img-responsive"/>
                    </div>
                    <div class="col-md-6">
                        <h3>@festival.Name</h3>
                        <h4>@festival.SubmissionTime.ToString("D")</h4>
                        <p>@festival.Summary</p>
                        <button class="btn btn-default" style="bottom : 0px; left: 0px" onclick="window.location='@Url.Action("Article", "Home", new {articleId = festival.Id})'">Daugiau...</button>
                    </div>
                </div>
                <br/>
            }
        </div>
        <div class="col-md-2">
            <div class="navbar-right">
                <br />
                <img src="~/images/sidebar.png" onclick="window.location = 'https://www.facebook.com/droneracinglietuva/';" onmouseover="this.style.cursor = 'pointer';"
                     alt="ads" class="img-responsive" style="border:2px solid black;" />
                <br />
                @if (User.Identity.IsAuthenticated)
                {
                    <div style="margin: auto; display: block;" class="btn btn-default" onclick="window.location = ('@Url.Action("AddArticle", "Home")')">Sukurti Straipsnį</div>
                }
            </div>
        </div>
    </div>
</div>
